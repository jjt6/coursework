public class CoffeeShop_Manager {

	private MenuList entries;

	public CoffeeShop_Manager(String inputFile) {

		initMenu("MenuList.csv");

	}
	
	public void initMenu(String filename) {
		//initialise menu list
		entries = new MenuList();
    	entries.initMenuList(filename);
    	initGUI();
	}
	
	public void initGUI() {
    	
    	//initialise CoffeeShop_GUI
    	CoffeeShop_GUI csGui = new CoffeeShop_GUI(entries); 
    	csGui.setVisible(true);
	}

}
